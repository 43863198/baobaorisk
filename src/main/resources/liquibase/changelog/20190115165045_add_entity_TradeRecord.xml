<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <!-- 交易记录表-->
    <changeSet id="20190115165045" author="zhen.pan">
		<preConditions onFail="MARK_RAN">
	        <not>
	            <tableExists tableName="T_TRADE_RECORD"/>
	        </not>
	    </preConditions>
        <createTable tableName="T_TRADE_RECORD" remarks="交易记录表">
            <column name="ID" type="VARCHAR(60)" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="OPENID" type="VARCHAR(60)" remarks="OPENID"/>
            <column name="TRADE_NO" type="VARCHAR(60)" remarks="订单号或者任务号"/>
            <column name="TRADE_NAME" type="VARCHAR(120)" remarks="交易描述"/>
            <column name="TRANSACTION_ID" type="VARCHAR(60)" remarks="微信订单号"/>
            <column name="TOTAL_FEE" type="int(11)" remarks="订单金额(分)"/>
            <column name="CASH_FEE" type="int(11)" remarks="现金支付(提现、红包)金额(分)"/>
            <column name="DISCOUNT_FEE" type="int(11)" remarks="提现手续费(分)"/>
            <column name="BANK_TYPE" type="VARCHAR(30)" remarks="付款银行"/>
            <column name="TIME_END" type="VARCHAR(30)" remarks="支付完成时间"/>
            <column name="TRADE_TYPE" type="INT(4)" defaultValueNumeric="10" remarks="交易类型:微信发包10,微信抢包20,微信提现30"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME" defaultValueDate="${now}" remarks="最后一次修改时间"/>
            <column name="CREATED_DATE" type="DATETIME" defaultValueDate="${now}" remarks="创建时间"/>
            <column name="DELETE_FLAG" type="INT(4)" defaultValueNumeric="0" remarks="删除标记(0正常,1删除)"/>
        </createTable>
        <createIndex indexName="idx_trade_record_openid" tableName="T_TRADE_RECORD" unique="false">
            <column name="OPENID" type="VARCHAR(60)"/>
        </createIndex>
        <createIndex indexName="idx_trade_record_trade_no" tableName="T_TRADE_RECORD" unique="false">
            <column name="TRADE_NO" type="VARCHAR(60)"/>
        </createIndex>
        <createIndex indexName="idx_trade_record_transaction_id" tableName="T_TRADE_RECORD" unique="false">
            <column name="TRANSACTION_ID" type="VARCHAR(60)"/>
        </createIndex>
        <createIndex indexName="idx_trade_record_trade_type" tableName="T_TRADE_RECORD" unique="false">
            <column name="TRADE_TYPE" type="INT(4"/>
        </createIndex>
        <createIndex indexName="idx_trade_record_delete_flag" tableName="T_TRADE_RECORD" unique="false">
            <column name="DELETE_FLAG" type="INT(4)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
